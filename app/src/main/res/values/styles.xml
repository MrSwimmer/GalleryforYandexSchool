<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="NavigationDrawerStyle">
        <item name="android:textSize">20sp</item><!-- text size in menu-->
        <item name="android:listPreferredItemHeightSmall">60dp</item><!-- item size in menu-->
        <item name="listPreferredItemHeightSmall">60dp</item><!-- item size in menu-->
    </style>

    <style name="YandexGalleryTheme" parent="Theme.Design.Light.NoActionBar" >
        <item name="android:colorBackground">@color/background_material_dark</item>
        <item name="android:colorForeground">@color/black</item>
        <item name="colorPrimaryDark">?attr/colorAccent</item>
    </style>
</resources>
